<mvc:View controllerName="cvapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
         <Table
                id="table"
                width="auto"
                items="{CvInfoModel>/}"
                growing="true"
                growingScrollToLoad="true">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{i18n>OverflowToolbar}"
                            level="H3"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>name}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>lastUpdate}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>actions}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem> <!-- type="Navigation" press=".onPress"-->
                        <cells>
                            <ObjectIdentifier
                                title="{CvInfoModel>NAME}"/>
				            <ObjectIdentifier title="{
                                path: 'CvInfoModel>LAST_UPDATE',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                pattern: 'dd.MM.YYYY'
                                }
                            }" />
                                <HBox>
                                    <Button press="onPress" 
                                            icon="sap-icon://edit" 
                                            visible="{= ${CvInfoModel>IS_CV_EXIST} === 'X'}"
                                            class="sapUiTinyMarginEnd"/>
                                    <Button press="onDownloadCV" 
                                            icon="sap-icon://download" 
                                            visible="{= ${CvInfoModel>IS_CV_EXIST} === 'X'}"
                                            class="sapUiTinyMarginEnd"/>
                                    <Button press="onApproveDeleteCV($event)" 
                                            icon="sap-icon://delete"    
                                            visible="{= ${CvInfoModel>IS_CV_EXIST} === 'X'}"/>
                                    <Button press="onPress" 
                                            icon="sap-icon://add"   
                                            visible="{= ${CvInfoModel>IS_CV_EXIST} === ''}"/>
                                </HBox >
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
