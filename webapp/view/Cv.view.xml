<mvc:View controllerName="cvapp.controller.Cv"
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:mvc="sap.ui.core.mvc" 
	xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified"
    height="100%">
	<Page title="" 		
	    showNavButton="true"
		navButtonPress=".onNavBack">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<l:content>
		<FlexBox alignItems="Start" justifyContent="End">
			<Button text="{i18n>save}" press="onCreateDeepEntity"/>
		</FlexBox>

<!--FOTO ve INFO panel-->
		<Panel class="sapUiDemoFlexBoxSizeAdjustments">
			<FlexBox alignItems="Start">				
				<VBox >
					<Image press=".onAdd('Image')" 
					id="employeeImg" 
					src="/sap/opu/odata/sap/ZCV_APP_SRV/ImageSet(DocId='{CvInfoModel>/PERS_ID}')/$value" 
					height="15rem" width="auto"/>
					<layoutData>
                    	<FlexItemData growFactor="1"/>
    				</layoutData>
				</VBox>
				<VBox>
						<f:SimpleForm id="SimpleForm1"
								editable="true"
								layout="ResponsiveGridLayout"
								title="{i18n>info}"
								labelSpanXL="3"
								labelSpanL="3"
								labelSpanM="3"
								labelSpanS="12"
								adjustLabelSpan="false"
								emptySpanXL="4"
								emptySpanL="4"
								emptySpanM="4"
								emptySpanS="0"
								columnsXL="1"
								columnsL="1"
								columnsM="1"
								singleContainerFullSize="false" >
								<f:content>
									<Label text="{i18n>id}" />
									<Input editable="false" value="{CvInfoModel>/PERS_ID}"/>
									<Label text="{i18n>name}" />
									<Input editable="false" value="{CvInfoModel>/AD}"/>
									<Label text="{i18n>phone}" />
									<Input editable="false" value="{CvInfoModel>/TELEFON}"/>
									<Label text="{i18n>mail}" />
									<Input editable="false" value="{CvInfoModel>/MAIL}"/>
								</f:content>
							</f:SimpleForm>					
				    <layoutData>
        				<FlexItemData growFactor="3"/>
    				</layoutData>
				</VBox>
			</FlexBox>
		</Panel>

<!--INFO2 panel-->
		<Panel class="sapUiDemoFlexBoxSizeAdjustments">
			<FlexBox alignItems="Start">
				<Panel>
					<content>
						<f:SimpleForm id="SimpleForm2"
								editable="true"
								layout="ResponsiveGridLayout"
								labelSpanXL="3"
								labelSpanL="3"
								labelSpanM="3"
								labelSpanS="12"
								adjustLabelSpan="false"
								emptySpanXL="4"
								emptySpanL="4"
								emptySpanM="4"
								emptySpanS="0"
								columnsXL="1"
								columnsL="1"
								columnsM="1"
								singleContainerFullSize="false" >
								<f:content>
									<Label text="{i18n>education}" />
									<Input value="{CvInfoModel>/EGITIM}"/>
									<Label text="{i18n>birthPlaceTime}" />
									<Input value="{CvInfoModel>/DOGUM_YERI}"/>
									<DatePicker
									id="DP4"
									value="{path:'CvInfoModel>/DOGUM_TARIHI', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true}}"
									class="sapUiSmallMarginBottom"/>
									<Label text="{i18n>maritalStatus}" />
									<ComboBox selectedKey="{CvInfoModel>/MEDENI_DURUM}">
										<items>
											<core:Item text="Evli"  key="Evli"/>
											<core:Item text="Bekar" key="Bekar"/>
										</items>
									</ComboBox>
									<Label text="{i18n>militaryService}" />
									<ComboBox selectedKey="{CvInfoModel>/ASKERLIK}">
										<items>
											<core:Item text="Yapıldı"   key="Yapıldı"/>
											<core:Item text="Yapılmadı" key="Yapılmadı"/>
										</items>
									</ComboBox>
									<Label text="{i18n>drivingLicense}" />
									<Input value="{CvInfoModel>/EHLIYET}"/>
									<Label text="{i18n>nationality}" />
									<Input value="{CvInfoModel>/UYRUK}"/>
									<Label text="{i18n>language}" />
									<Input value="{CvInfoModel>/LISAN}"/>
									<Label text="{i18n>city}" />
									<Input value="{CvInfoModel>/SEHIR}"/>
								</f:content>
							</f:SimpleForm>
					</content>
				    <layoutData>
        				<FlexItemData growFactor="2"/>
    				</layoutData>
				</Panel>
				<Panel>
					<content>
						<f:SimpleForm id="SimpleForm3"
								editable="true"
								layout="ResponsiveGridLayout"
								labelSpanXL="3"
								labelSpanL="3"
								labelSpanM="3"
								labelSpanS="12"
								adjustLabelSpan="false"
								emptySpanXL="4"
								emptySpanL="4"
								emptySpanM="4"
								emptySpanS="0"
								columnsXL="1"
								columnsL="1"
								columnsM="1"
								singleContainerFullSize="false" >
								<f:content>
								    <Label text="{i18n>employeeTitle}" />
									<Input value="{CvInfoModel>/UNVAN}"/>
									<Label text="{i18n>businessAddress}" />
									<Input value="{CvInfoModel>/IS_ADRESI}"/>
									<Label text="{i18n>summary}" />
									<TextArea id="textAreaWithBinding2" 
											value="{CvInfoModel>/OZET}"
											maxLength="600" 
											width="100%" 
											rows="5"/>
								</f:content>
							</f:SimpleForm>
					</content>
				    <layoutData>
        				<FlexItemData growFactor="2"/>
    				</layoutData>
				</Panel>
			</FlexBox>
		</Panel>

<!--EDUCATION panel-->
		<Panel>
			<content>
			    <Table
					id="educationTable"
					width="auto"
					items="{CvInfoModel>/CvInfoToEducations/results}"
					growing="true"
					growingScrollToLoad="true"
					updateFinished=".onUpdateFinished">
					 <headerToolbar>
                    <OverflowToolbar>
					<ToolbarSpacer/>
					    <Button press=".onAdd('Education')" icon="sap-icon://add" /> 
                        <Title
                            text="{i18n>educationTableTitle}"
                            level="H3"/>
                    </OverflowToolbar>
                </headerToolbar>
					<columns>
						<Column>
							<Text text="{i18n>educationType}"/>
						</Column>
						<Column >
							<Text text="{i18n>school}"/>
						</Column>
						<Column>
							<Text text="{i18n>department}"/>
						</Column>
						<Column>
							<Text text="{i18n>graduationDate}"/>
						</Column>
						<Column hAlign="End" minScreenWidth="Small">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier
									title="{CvInfoModel>EGITIM_TIPI}"/>
								<ObjectIdentifier
									title="{CvInfoModel>OKUL}"/>
								<ObjectIdentifier
									title="{CvInfoModel>BOLUM}"/>
								<ObjectIdentifier title="{
                                path: 'CvInfoModel>MEZUNIYET_TARIHI',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
									pattern: 'dd.MM.YYYY'
									}
								}" />
								<FlexBox justifyContent="End">
									<Button press=".onEdit($event,'Education')"   icon="sap-icon://edit" class="sapUiTinyMarginEnd"/> 
									<Button press=".onApproveDeletePress($event,'Education')" icon="sap-icon://delete"/> 
                                </FlexBox >
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
		</Panel>
				
<!--PROJECTS panel-->
		<Panel>
			<content>
			    <Table
					id="projectTable"
					width="auto"
					items="{CvInfoModel>/CvInfoToProjects/results}"
					growing="true"
					growingScrollToLoad="true"
					updateFinished=".onUpdateFinished">
					 <headerToolbar>
                    <OverflowToolbar>
					<ToolbarSpacer/>
					    <Button press=".onAdd('Project')" icon="sap-icon://add"/> 
                        <Title
                            text="{i18n>projectTableTitle}"
                            level="H3"/>
                    </OverflowToolbar>
                </headerToolbar>
					<columns>
						<Column >
							<Text text="{i18n>projectName}"/>
						</Column>
						<Column>
							<Text text="{i18n>customer}"/>
						</Column>
						<Column>
							<Text text="{i18n>sector}"/>
						</Column>
						<Column>
							<Text text="{i18n>mission}"/>
						</Column>
						<Column>
							<Text text="{i18n>responsibility}"/>
						</Column>
						<Column>
							<Text text="{i18n>duration}"/>
						</Column>
						<Column hAlign="End" minScreenWidth="Small">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier
									title="{CvInfoModel>PROJE_AD}"/>
								<ObjectIdentifier
									title="{CvInfoModel>MUSTERI}"/>
								<ObjectIdentifier
									title="{CvInfoModel>SEKTOR}"/>
								<ObjectIdentifier
									title="{CvInfoModel>GOREV}"/>
								<ObjectIdentifier
									title="{CvInfoModel>SORUMLULUK}"/>
								<VBox >
									<ObjectIdentifier title="{
										path: 'CvInfoModel>PROJE_BASLANGIC',
										type: 'sap.ui.model.type.Date',
										formatOptions: {
										pattern: 'dd.MM.YYYY'
										}
									}" />
									<ObjectIdentifier title="{
										path: 'CvInfoModel>PROJE_BITIS',
										type: 'sap.ui.model.type.Date',
										formatOptions: {
										pattern: 'dd.MM.YYYY'
										}
									}" />
								</VBox>
								<FlexBox justifyContent="End">
									<Button press=".onEdit($event,'Project')"   icon="sap-icon://edit" class="sapUiTinyMarginEnd"/> 
									<Button press=".onApproveDeletePress($event,'Project')" icon="sap-icon://delete"/> 
                                </FlexBox >
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
		</Panel>
				
<!--EXPERIENCES panel-->
		<Panel>
			<content>
			    <Table
					id="experienceTable"
					width="auto"
					items="{CvInfoModel>/CvInfoToExperiences/results}"
					growing="true"
					growingScrollToLoad="true"
					updateFinished=".onUpdateFinished">
					 <headerToolbar>
                    <OverflowToolbar>
					<ToolbarSpacer/>
					    <Button press=".onAdd('Experience')" icon="sap-icon://add"/> 
                        <Title
                            text="{i18n>experienceTableTitle}"
                            level="H3"/>
                    </OverflowToolbar>
                </headerToolbar>
					<columns>
						<Column >
							<Text text="{i18n>company}"/>
						</Column>
						<Column>
							<Text text="{i18n>employeeTitle}"/>
						</Column>
						<Column>
							<Text text="{i18n>workType}"/>
						</Column>
						<Column>
							<Text text="{i18n>beginDate}"/>
						</Column>
						<Column>
							<Text text="{i18n>endDate}"/>
						</Column>
						<Column hAlign="End" minScreenWidth="Small">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier
									title="{CvInfoModel>SIRKET}"/>
								<ObjectIdentifier
									title="{CvInfoModel>UNVAN}"/>
								<ObjectIdentifier
									title="{CvInfoModel>ISTIHDAM_TURU}"/>
								<ObjectIdentifier title="{
										path: 'CvInfoModel>BASLANGIC',
										type: 'sap.ui.model.type.Date',
										formatOptions: {
										pattern: 'dd.MM.YYYY'
										}
									}" />
								<FlexBox>								
									<ObjectIdentifier title="{
										path: 'CvInfoModel>BITIS',
										type: 'sap.ui.model.type.Date',
										formatOptions: {
										pattern: 'dd.MM.YYYY'
										}
									}" 
										visible="{= ${CvInfoModel>DEVAM_DURUMU} !== true}"/>
                                    <ObjectIdentifier title="Devam" 
										visible="{= ${CvInfoModel>DEVAM_DURUMU} === true}"/>
								</FlexBox>									
								<FlexBox justifyContent="End">
									<Button press=".onEdit($event,'Experience')"   icon="sap-icon://edit" class="sapUiTinyMarginEnd"/> 
									<Button press=".onApproveDeletePress($event,'Experience')" icon="sap-icon://delete"/> 
                                </FlexBox >
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
		</Panel>

<!--CERTIFICATE panel-->
		<Panel>
			<content>
			    <Table
					id="certificateTable"
					width="auto"
					items="{CvInfoModel>/CvInfoToCertificates/results}"
					growing="true"
					growingScrollToLoad="true"
					updateFinished=".onUpdateFinished">
					 <headerToolbar>
                    <OverflowToolbar>
					<ToolbarSpacer/>
					    <Button press=".onAdd('Certificate')" icon="sap-icon://add"/> 
                        <Title
                            text="{i18n>certificateTableTitle}"
                            level="H3"/>
                    </OverflowToolbar>
                </headerToolbar>
					<columns>
						<Column >
							<Text text="{i18n>certificateName}"/>
						</Column>
						<Column>
							<Text text="{i18n>establishment}"/>
						</Column>
						<Column>
							<Text text="{i18n>validity}"/>
						</Column>
						<Column hAlign="End" minScreenWidth="Small">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier
									title="{CvInfoModel>SERTIFIKA_AD}"/>
								<ObjectIdentifier
									title="{CvInfoModel>VERILEN_KURUM}"/>
								<ObjectIdentifier title="{
									path: 'CvInfoModel>GECERLILIK_SURESI',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
									pattern: 'dd.MM.YYYY'
									}
								}" />
								<FlexBox justifyContent="End">
									<Button press=".onEdit($event,'Certificate')"   icon="sap-icon://edit" class="sapUiTinyMarginEnd"/> 
									<Button press=".onApproveDeletePress($event,'Certificate')" icon="sap-icon://delete"/> 
                                </FlexBox >
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
		</Panel>

<!--SKILL panel-->
		<Panel>
			<content>
			    <Table
					id="skillTable"
					width="auto"
					items="{CvInfoModel>/CvInfoToSkills/results}"
					growing="true"
					growingScrollToLoad="true"
					updateFinished=".onUpdateFinished">
					 <headerToolbar>
                    <OverflowToolbar>
					<ToolbarSpacer/>
					    <Button press=".onAdd('Skill')" icon="sap-icon://add"/> 
                        <Title
                            text="{i18n>skillTableTitle}"
                            level="H3"/>
                    </OverflowToolbar>
                </headerToolbar>
					<columns>
						<Column >
							<Text text="{i18n>skill}"/>
						</Column>
						<Column hAlign="End" minScreenWidth="Small">
							<Text text=""/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier
									title="{CvInfoModel>YETENEK}"/>
								<FlexBox justifyContent="End">
									<Button press=".onEdit($event,'Skill')"   icon="sap-icon://edit" class="sapUiTinyMarginEnd"/> 
									<Button press=".onApproveDeletePress($event,'Skill')" icon="sap-icon://delete"/> 
                                </FlexBox >
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
		</Panel>

        </l:content>
	</l:VerticalLayout>
	</Page>
</mvc:View>