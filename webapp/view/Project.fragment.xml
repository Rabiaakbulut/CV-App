<core:FragmentDefinition
    xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified">
   <Dialog
      id="ProjectDialog"
      title ="{i18n>projectDialogTitle}">
        <content>
            <f:SimpleForm id="SimpleFormProject"
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false" >
                <f:content>
                    <Label text="{i18n>projectName}" />
                    <Input value="{ProjectModel>/PROJE_AD}" required="true" change="handleInputChange"/>
                    <Label text="{i18n>customer}" />
                    <Input value="{ProjectModel>/MUSTERI}"/>
                    <Label text="{i18n>sector}" />
                    <Input value="{ProjectModel>/SEKTOR}"/>
                    <Label text="{i18n>mission}" />
                    <Input value="{ProjectModel>/GOREV}"/>
                    <Label text="{i18n>responsibility}" />
                    <TextArea id="textAreaWithBinding2" 
                            value="{ProjectModel>/SORUMLULUK}"
                            maxLength="200" 
                            width="100%" 
                            valueState="Information"
			                valueStateText="açıklama (max 200 char)"/>
                    <Label text="{i18n>beginDate}" />            
                    <DatePicker
                    id="ProjectBeginDate"
                    value="{path:'ProjectModel>/PROJE_BASLANGIC', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true}}"
                    class="sapUiSmallMarginBottom"/>
                    <Label text="{i18n>endDate}" />
                    <DatePicker
                    id="ProjectEndDate"
                    value="{path:'ProjectModel>/PROJE_BITIS', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true}}"
                    class="sapUiSmallMarginBottom"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button id="closeButton" text="{i18n>dialogCloseButtonText}" press="onCloseDialog"/>
            <Button text="{i18n>dialogSaveButtonText}" press="onSaveData"/>
        </buttons>
   </Dialog>
</core:FragmentDefinition>